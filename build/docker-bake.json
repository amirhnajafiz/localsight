{
    "variable": {
      "TAG": {
        "default": "latest"
      }
    },
    "group": {
      "default": {
        "targets": ["localsight"]
      }
    },
    "target": {
      "localsight": {
        "context": ".",
        "dockerfile": "build/Dockerfile",
        "tags": ["ghcr.io/amirhnajafiz/localsight:${TAG}"],
        "output": ["type=registry"]
      }
    }
  }
  